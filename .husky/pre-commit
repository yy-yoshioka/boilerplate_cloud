#!/usr/bin/env sh
# Husky pre-commit hook

set -e

echo "ğŸ”  formatting with Prettier"
yarn prettier --write .

echo "ğŸ”  linting with ESLint"
yarn lint --fix

echo "ğŸ”  type-checking"
# Use build mode; -p is invalid together with -b
yarn tsc -b tsconfig.base.json --pretty

echo "ğŸ”  running related tests"

yarn test

# Re-stage any auto-fixed files
git add -u
